<mvc:View controllerName="sample.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    	xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
		core:require="{ formatter: 'sample/project1/model/formatter' }"
>
    
    <Page id="page" title="{i18n>title}"  >
	  <VBox
        width="100%"
        alignItems="Center"
        justifyContent="Start">

		
<f:SimpleForm id="SimpleFormDisplay354"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Address"
			
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Name" />
                <Input
    id="nameInput"
    value="{manifestModel>/name}"
    showValueHelp="true"
    valueHelpRequest="onOpenValueHelp"
/>

				
				<Label text="Street/No." />
				<Input value="{manifestModel>/StreetNo}" />
				<Label text="ZIP Code/City" />
				<Input value="{manifestModel>/ZIPCodeCity}" />
				<Label text="Status" />
				<Input value="{manifestModel>/Status}" />
				
			</f:content>
		</f:SimpleForm>

<Button text="Add to Table" press="onAddToTable" />
<Button text="Add to List" press="onAddToList" />



    	<Table
		items="{
			path: 'manifestModel>/Addressinfo',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="ADDRESS TABLE" level="H2"/>
				<ToolbarSpacer/>
				<CheckBox text="Fixed Layout" selected="true" select="onCheckBoxSelect"/>
				<Button text="Open Dialog" press="onOpenPressed"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Name" />
			</Column>
			<Column>
				<Text text="Street No" />
			</Column>
			<Column>
				<Text text="ZIP Code/City" />
			</Column>
            <Column >
            <Text text="Status"></Text>
            </Column>

		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation">
			

				<cells>
					<Text text="{manifestModel>name}" 
                    wrapping="false" />
                    <Text text="{manifestModel>StreetNo}"
                     wrapping="false" />
                    <Text text="{manifestModel>ZIPCodeCity}"
                     wrapping="false" />
                    <!-- <Text text="{manifestModel>Status}"
                     /> -->
					 <Text 
					 text="{
					 parts:[ 
					 
					 {path:'manifestModel>Status'},
					 { path:'manifestModel>name'}],
					 		
					 formatter : 'formatter.statusChange' }"
					 ></Text>
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>

<List
    headerText="Address List"
    headerLevel="H2"
    items="{manifestModel>/Listinfo}">

    <StandardListItem
        title="{manifestModel>name}"
        description="{manifestModel>StreetNo},{manifestModel>ZIPCodeCity},{manifestModel>Status}"
         />
</List>


	
       

    </VBox>
    



    </Page>
</mvc:View>